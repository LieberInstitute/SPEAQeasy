/*
vim: syntax=groovy
-*- mode: groovy;-*-
 *
 * Configuration for execution of the pipeline on a computing cluster
 * managed with Sun Grid Engines (SGE).
 *
 */

params {
  salmon_min_read_len = 31
  min_intron_len = 20
  bam2wig_depth_thres = 4000000000
  samtools_min_map_q = 0
  samtools_min_base_q = 13
  samtools_max_depth = 1000000
  kallisto_len_mean = 200
  kallisto_len_sd = 30
  trim_clip_single = "2:30:10"
  trim_clip_paired = "2:30:10:1:TRUE"
  trim_lead = 3
  trim_trail = 3
  trim_slide_window = "4:15"
  trim_min_len = 75
}

process {

  executor = 'sge'

  penv = 'smp'
  queue = 'mainqueue'

  cpus = { 1 * task.attempt }
  memory = { 2.GB * task.attempt }
  time = { 2.hour * task.attempt }
  errorStrategy = { task.exitStatus == 140 ? 'retry' : 'terminate' }

  maxRetries = '3'

  withName: pullGENCODEassemblyfa {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  withName: buildHISATindex {
    cpus = '4'
    memory = '10.GB'
  }
  withName: pullGENCODEgtf {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  withName: buildPrepBED {
    cpus = { 4 * task.attempt }
    memory = '10.GB'
  }
  withName: pullGENCODEtranscripts {
    cpus = '1'
    memory = '2.GB'
  }
  withName: buildSALMONindex  {
    cpus = { 4 * task.attempt }
    memory = '10.GB'
  }
  withName: PreprocessInputs {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  withName: ERCC {
    cpus = '4'
    memory = '5.GB'
  }
  withName: QualityUntrimmed { 
    cpus = { 1 * task.attempt }
    memory = '10.GB'
  }
  withName: AdaptiveTrimSingleReads {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  withName: AdaptiveTrimPairedReads {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  withName: Trimming {
    cpus = '4'
    memory = '10.GB'
  }
  withName: QualityTrimmed {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  withName: SingleEndHISAT {
    cpus = '4'
    memory = '10.GB'
  }
  withName: PairedEndNoTrimHISAT {
    cpus = '4'
    memory = '10.GB'
  }
  withName: PairedEndTrimmedHISAT {
    cpus = '4'
    memory = '10.GB'
  }
  withName: SamtoBam {
    cpus = '4'
    memory = '5.GB'
  }
  withName: InferExperiment {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  withName: InferStrandness {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  withName: FeatureCounts {
    cpus = '4'
    memory = '10.GB'
  }
  withName: PrimaryAlignments {
    cpus = '4'
    memory = '10.GB'
  }
  withName: Junctions {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  withName: Coverage {
    cpus = '4'
    memory = '10.GB'
  }
  withName: WigToBigWig {
    cpus = 1
    memory = '2.GB'
  }
  withName: MeanCoverage {
    cpus = '4'
    memory = '10.GB'
  }
  withName: TXQuant {
    cpus = '4'
    memory = '10.GB'
  }
  withName: CountObjects {
    cpus = '4'
    memory = '10.GB'
  }
  withName: CoverageObjects {
    cpus = '4'
    memory = '10.GB'
  }
  withName: VariantCalls {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  withName: VariantsMerge {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  withName: ExpressedRegions {
    cpus = '4'
    memory = '10.GB'
  }
}
