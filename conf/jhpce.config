/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 *  Nextflow base config file
 * -------------------------------------------------
 * A 'blank slate' config file, appropriate for general
 * use on most high performace compute environments.
 * Assumes that all software is installed and available
 * on the PATH. Runs in `local` mode - all jobs will be
 * run on the logged in environment.
 * 
 *
 * In order to customize the cluster environment for sge-large,
 * simply change the cpu and memory available to the executor
 * as well as each task below
 */


process {

  executor = 'sge'
  penv = 'local'

  disk = '2.GB'
  cpus = { 1 * task.attempt }
  memory = { 2.GB * task.attempt }
  time = { 2.hour * task.attempt }
  errorStrategy = { task.exitStatus == 140 ? 'retry' : 'terminate' }

  maxRetries = '3'
  maxErrors = '-1'

  $pullGENCODEassemblyfa {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
    disk = ''
  }
  $buildHISATindex {
    cpus = '4'
    memory = '10.GB'
    disk = ''
    module = 'hisat2/2.0.4'
  }
  $pullGENCODEgtf {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
    disk = ''
  }
  $buildPrepBED {
    cpus = { 4 * task.attempt }
    memory = '10.GB'
    disk = ''
    module = 'R/3.4.x'
  }
  $pullGENCODEtranscripts {
    cpus = '1'
    memory = '2.GB'
    disk = ''
  }
  $buildSALMONindex  {
    cpus = { 1 * task.attempt }
    memory = '50.GB'
    disk = ''
    module = 'salmon/0.8.2'
    clusterOptions = '-l h_vmem=50G'
  }
  $Merging {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
    disk = ''
  }
  $ERCC {
    cpus = '4'
    memory = '5.GB'
    disk = ''
    module = 'kallisto/0.43.0'
  }
  $IndividualManifest {
    memory = '2.GB'
    disk = ''
  }
  $Manifest {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
    disk = ''
  }
  $QualityUntrimmed { 
    cpus = { 1 * task.attempt }
    memory = '10.GB'
    disk = ''
    module = 'fastqc/0.11.5'
  }
  $AdaptiveTrimSingleReads {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
    disk = ''
  }
  $AdaptiveTrimPairedReads {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
    disk = ''
  }
  $Trimming {
    cpus = '4'
    memory = '10.GB'
    disk = ''
    module = 'trimmomatic/0.36'
  }
  $QualityTrimmed {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
    disk = ''
    module = 'fastqc/0.11.5'
  }
  $SingleEndHISAT {
    cpus = '4'
    memory = '10.GB'
    disk = ''
    module = 'hisat2/2.0.4'
  }
  $PairedEndNoTrimHISAT {
    cpus = '4'
    memory = '10.GB'
    disk = ''
    module = 'hisat2/2.0.4'
  }
  $PairedEndTrimmedHISAT {
    cpus = '4'
    memory = '10.GB'
    disk = ''
    module = 'hisat2/2.0.4'
  }
  $SamtoBam {
    cpus = '4'
    memory = '5.GB'
    disk = ''
    module = 'samtools/1.3.1'
  }
  $InferExperiment {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
    disk = ''
    module = 'rseqc/2.6.4'
  }
  $InferStrandness {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
    disk = ''
    module = 'R/3.4.x'
  }
  $FeatureCounts {
    cpus = '4'
    memory = '10.GB'
    disk = ''
    module = 'featurecounts/1.5.0-p3'
  }
  $PrimaryAlignments {
    cpus = '4'
    memory = '10.GB'
    disk = ''
    module = 'samtools/1.3.1'
  }
  $Junctions {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
    disk = ''
    module = 'python/2.7.9:regtools/0.3.0'
  }
  $Coverage {
    cpus = '4'
    memory = '10.GB'
    disk = ''
    module = 'python/2.7.9:rseqc/2.6.4:ucsctools'
  }
  $WigToBigWig {
    cpus = 1
    memory = '2.GB'
    disk = ''
    module = 'ucsctools'
  }
  $MeanCoverage {
    cpus = 1
    memory = '30.GB'
    disk = ''
    module = 'wiggletools/1.2.1:ucsctools'
    clusterOptions = '-l h_vmem=30G'
  }
  $TXQuant {
    cpus = '1'
    memory = '60.GB'
    disk = ''
    module = 'salmon/0.8.2'
    clusterOptions = '-l h_vmem=60G'
  }
  $CountObjects {
    cpus = '4'
    memory = '10.GB'
    disk = ''
    module = 'R/3.4.x'
  }
  $CoverageObjects {
    cpus = '4'
    memory = '10.GB'
    disk = ''
    module = 'R/3.4.x'
  }
  $VariantCalls {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
    disk = ''
    module = 'samtools/1.3.1:bcftools/1.3.1:htslib/1.2.1'
  }
  $VariantsMerge {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
    disk = ''
    module = 'vcftools/0.1.15:htslib/1.2.1'
  }
  $ExpressedRegions {
    cpus = '4'
    memory = '10.GB'
    disk = ''
    module = 'R/3.4.x'
  }
}
