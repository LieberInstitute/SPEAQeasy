params {
  salmon_min_read_len = 31
  juncts_min_intron_len = 9
  bam2wig_depth_thres = 4000000000
  samtools_min_map_q = 0
  samtools_min_base_q = 13
  samtools_max_depth = 1000000
  kallisto_len_mean = 200
  kallisto_len_sd = 30
}

process {
  executor = 'slurm'
  disk = '2.GB'
  errorStrategy = { task.exitStatus == 140 ? 'retry' : 'terminate' }
  maxRetries = 2
  
  withName: pullGENCODEassemblyfa {
    cpus = { 1 * task.attempt }
    memory = 2.GB
    disk = ''
    clusterOptions = '-t 10:00'
  }
  withName: buildHISATindex {
    cpus = 8
    memory = 32.GB
    disk = '5.GB'
    //module = 'hisat2/2.1.0'
    clusterOptions = '-t 2:00:00'
  }
  withName: pullGENCODEgtf {
    cpus = { 1 * task.attempt }
    memory = 2.GB
    disk = ''
    clusterOptions = '-t 10:00'
  }
  withName: buildPrepBED {
    cpus = { 4 * task.attempt }
    memory = 12.GB
    disk = ''
    //module = 'conda_R/3.5.x'
    clusterOptions = '-t 10:00'
  }
  withName: pullGENCODEtranscripts {
    cpus = 1
    memory = 2.GB
    disk = ''
    clusterOptions = '-t 10:00'
  }
  withName: buildSALMONindex  {
    cpus = 8
    memory = 39.GB
