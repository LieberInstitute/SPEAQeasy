/*
vim: syntax=groovy
-*- mode: groovy;-*-
 *
 *  A config file for execution in a SLURM environment
 * 
 */

executor = 'slurm'

params {
  gencode_version_human = "32"
  gencode_version_mouse = "M23"
  ensembl_version_rat = "98"
  anno_build = "main" // main or primary (main is canonical seqs only)
  
  num_reads_infer_strand = 2000000
  salmon_min_read_len = 31
  min_intron_len = 20
  bam2wig_depth_thres = 4000000000
  samtools_min_map_q = 0
  samtools_min_base_q = 13
  samtools_max_depth = 1000000
  kallisto_len_mean = 200
  kallisto_len_sd = 30
  trim_clip_single = "2:30:10"
  trim_clip_paired = "2:30:10:1:TRUE"
  trim_lead = 3
  trim_trail = 3
  trim_slide_window = "4:15"
  trim_min_len = 75
  feat_counts_gene_opts = ""
  feat_counts_exon_opts = "-O"
}

process {
  disk = 10.GB
  errorStrategy = { task.exitStatus == 140 ? 'retry' : 'terminate' }
  maxRetries = 1
  
  withName: PullAssemblyFasta {
    cpus = { 1 * task.attempt }
    memory = 2.GB
    clusterOptions = '-t 10:00'
  }
  withName: buildHISATindex {
    cpus = 8
    memory = 32.GB
    //module = 'hisat2/2.1.0'
    clusterOptions = '-t 2:00:00'
  }
  withName: PullGtf {
    cpus = { 1 * task.attempt }
    memory = 2.GB
    clusterOptions = '-t 10:00'
  }
  withName: BuildAnnotationObjects {
    cpus = 1
    memory = 15.GB
    clusterOptions = '-t 10:00'
  }
  withName: BuildKallistoIndex {
    cpus = 1
    memory = 10.GB
    clusterOptions = '-t 20:00'
  }
  withName: PullTranscriptFasta {
    cpus = 1
    memory = 2.GB
    clusterOptions = '-t 10:00'
  }
  withName: buildSALMONindex  {
    cpus = 2
    memory = 39.GB
    //module = 'salmon/0.8.2'
    clusterOptions = '-t 20:00'
  }
  withName: PreprocessInputs {
    cpus = { 1 * task.attempt }
    memory = 2.GB
    disk = 80.GB
    clusterOptions = '-t 10:00'
  }
  withName: CompleteManifest {
    cpus = 1
    memory = 2.GB
    clusterOptions = '-t 5:00'
  }
  withName: ERCC {
    cpus = 4
    memory = 8.GB
    //module = 'kallisto/0.43.0'
    clusterOptions = '-t 10:00'
  }
  withName: QualityUntrimmed { 
    cpus = 2
    memory = 8.GB
    //module = 'fastqc/0.11.5'
    clusterOptions = '-t 10:00'
  }
  withName: Trimming {
    cpus = 4
    memory = 12.GB
    disk = 80.GB
    //module = 'trimmomatic/0.36'
    clusterOptions = '-t 10:00'
  }
  withName: QualityTrimmed {
    cpus = { 1 * task.attempt }
    memory = 2.GB
    //module = 'fastqc/0.11.5'
    clusterOptions = '-t 10:00'
  }
  withName: SingleEndHISAT {
    cpus = 4
    memory = 12.GB
    disk = 800.GB
    //module = 'hisat2/2.1.0'
    clusterOptions = '-t 20:00'
  }
  withName: PairedEndHISAT {
    cpus = 4
    memory = 12.GB
    disk = 800.GB
    //module = 'hisat2/2.1.0'
    clusterOptions = '-t 20:00'
  }
  withName: SamtoBam {
    cpus = 4
    memory = 8.GB
    disk = 150.GB
    //module = 'samtools/1.3.1'
    clusterOptions = '-t 10:00'
  }
  withName: InferStrandness {
    cpus = { 2 * task.attempt }
    memory = 10.GB
    //module = 'conda_R/3.5.x'
    clusterOptions = '-t 20:00'
  }
  withName: FeatureCounts {
    cpus = 4
    memory = 12.GB
    //module = 'featurecounts/1.5.0-p3'
    clusterOptions = '-t 10:00'
  }
  withName: PrimaryAlignments {
    cpus = 4
    memory = 12.GB
    //module = 'samtools/1.3.1'
    clusterOptions = '-t 10:00'
  }
  withName: Junctions {
    cpus = { 1 * task.attempt }
    memory = 2.GB
    //module = 'python/2.7.9:regtools/0.3.0'
    clusterOptions = '-t 10:00'
  }
  withName: Coverage {
    cpus = 4
    memory = 12.GB
    disk = 100.GB
    //module = 'python/2.7.9:rseqc/2.6.4:ucsctools'
    clusterOptions = '-t 20:00'
  }
  withName: WigToBigWig {
    cpus = 1
    memory = 2.GB
    disk = 30.GB
    //module = 'ucsctools'
    clusterOptions = '-t 10:00'
  }
  withName: MeanCoverage {
    cpus = 8
    memory = 39.GB
    //module = 'wiggletools/1.2.1:ucsctools'
    clusterOptions = '-t 10:00'
  }
  withName: TXQuantSalmon {
    cpus = 1
    memory = 20.GB
    //module = 'salmon/0.8.2'
    clusterOptions = '-t 20:00'
  }
  withName: TXQuantKallisto {
    cpus = 4
    memory = '10.GB'
    clusterOptions = '-t 20:00'
  }
  withName: CountObjects {
    cpus = 2
    memory = 12.GB
    disk = 100.GB
    //module = 'conda_R/3.5.x'
    clusterOptions = '-t 10:00'
  }
  withName: CoverageObjects {
    cpus = 4
    memory = 12.GB
    disk = 50.GB
    //module = 'conda_R/3.5.x'
    clusterOptions = '-t 10:00'
  }
  withName: VariantCalls {
    cpus = { 1 + task.attempt }
    memory = 2.GB
    //module = 'samtools/1.3.1:bcftools/1.3.1:htslib/1.2.1'
    clusterOptions = '-t 5:00'
  }
  withName: VariantsMerge {
    cpus = { 1 * task.attempt }
    memory = 4.GB
    //module = 'bcftools/1.9:htslib/1.2.1'
    clusterOptions = '-t 10:00'
  }
  withName: ExpressedRegions {
    cpus = 4
    memory = 12.GB
    disk = 100.GB
    //module = 'conda_R/3.5.x'
    clusterOptions = '-t 1:00:00'
  }
}