/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 *  Nextflow base config file
 * -------------------------------------------------
 * A 'blank slate' config file, appropriate for general
 * use on most high performace compute environments.
// * Assumes that all software is installed and available
 * on the PATH. Runs in `local` mode - all jobs will be
 * run on the logged in environment.
 *
 */

params {
  salmon_min_read_len = 31
  juncts_min_intron_len = 9
  bam2wig_depth_thres = 4000000000
  samtools_min_map_q = 0
  samtools_min_base_q = 13
  samtools_max_depth = 1000000
  kallisto_len_mean = 200
  kallisto_len_sd = 30
}

process {

  cpus = '1'
//  memory = '4.GB'
  time = '2.h'
  errorStrategy = { task.exitStatus == 140 ? 'retry' : 'terminate' }

  maxRetries = '3'
  maxErrors = '-1'

  withName: pullGENCODEassemblyfa {
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  withName: buildHISATindex {
    cpus = '8'
    memory = '14.GB'
  }
  withName: pullGENCODEgtf {
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  withName: buildPrepBED {
    cpus = { 8 * task.attempt }
    memory = '14.GB'
  }
  withName: pullGENCODEtranscripts {
    cpus = '1'
    memory = '4.GB'
  }
  withName: buildSALMONindex  {
    cpus = { 8 * task.attempt }
    memory = '14.GB'
  }
  withName: Merging {
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  withName: ERCC {
    cpus = '8'
    memory = '14.GB'
  }
  withName: Manifest {
    cpus = { 1 * task.attempt }
    memory = '1.GB'
  }
  withName: QualityUntrimmed { 
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  withName: AdaptiveTrimSingleReads {
    cpus = { 1 * task.attempt }
    memory = '1.GB'
  }
  withName: AdaptiveTrimPairedReads {
    cpus = { 1 * task.attempt }
    memory = '1.GB'
  }
  withName: Trimming {
    cpus = '8'
    memory = '14.GB'
  }
  withName: QualityTrimmed {
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  withName: SingleEndHISAT {
    cpus = '8'
    memory = '14.GB'
  }
  withName: PairedEndNoTrimHISAT {
    cpus = '8'
    memory = '14.GB'
  }
  withName: PairedEndTrimmedHISAT {
    cpus = '8'
    memory = '14.GB'
  }
  withName: SamtoBam {
    cpus = '8'
    memory = '14.GB'
  }
  withName: InferExperiment {
    cpus = { 1 * task.attempt }
    memory = '1.GB'
  }
  withName: InferStrandness {
    cpus = { 1 * task.attempt }
    memory = '1.GB'
  }
  withName: FeatureCounts {
    cpus = '8'
    memory = '2.GB'
  }
  withName: PrimaryAlignments {
    cpus = '8'
    memory = '2.GB'
  }
  withName: Junctions {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  withName: Coverage {
    cpus = '5'
    memory = '10.GB'
  }
  withName: WigToBigWig {
    cpus = 1
    memory = '4.GB'
  }
  withName: MeanCoverage {
    cpus = '5'
    memory = '10.GB'
  }
  withName: TXQuant {
    cpus = '8'
    memory = '14.GB'
  }
  withName: CountObjects {
    cpus = '5'
    memory = '10.GB'
  }
  withName: CoverageObjects {
    cpus = '5'
    memory = '10.GB'
  }
  withName: VariantCalls {
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  withName: VariantsMerge {
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  withName: ExpressedRegions {
    cpus = '8'
    memory = '14.GB'
  }

}
