/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 *  Nextflow base config file
 * -------------------------------------------------
 * A 'blank slate' config file, appropriate for general
 * use on most high performace compute environments.
 * Assumes that all software is installed and available
 * on the PATH. Runs in `local` mode - all jobs will be
 * run on the logged in environment.
 *
 */

process {

  time = { 2.hour * task.attempt }
  errorStrategy = { task.exitStatus == 140 ? 'retry' : 'terminate' }

  maxRetries = '3'
  maxErrors = '-1'

  $pullGENCODEassemblyfa {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $buildHISATindex {
    cpus = '8'
    memory = '10.GB'
  }
  $pullGENCODEgtf {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $buildPrepBED {
    cpus = { 8 * task.attempt }
    memory = '10.GB'
  }
  $pullGENCODEtranscripts {
    cpus = '1'
    memory = '2.GB'
  }
  $buildSALMONindex  {
    cpus = { 8 * task.attempt }
    memory = '10.GB'
  }
  $sampleMerging {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $sampleERCC {
    cpus = '8'
    memory = '5.GB'
  }
  $sampleIndividualManifest {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $sampleManifest {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $sampleQualityUntrimmed { 
    cpus = { 1 * task.attempt }
    memory = '10.GB'
  }
  $sampleAdaptiveTrimSingleReads {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $sampleAdaptiveTrimPairedReads {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $sampleTrimming {
    cpus = '8'
    memory = '10.GB'
  }
  $sampleQualityTrimmed {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $sampleSingleEndHISAT {
    cpus = '8'
    memory = '10.GB'
  }
  $samplePairedEndNoTrimHISAT {
    cpus = '8'
    memory = '10.GB'
  }
  $samplePairedEndTrimmedHISAT {
    cpus = '8'
    memory = '10.GB'
  }
  $sampleSamtoBam {
    cpus = '8'
    memory = '5.GB'
  }
  $sampleInferExperiment {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $sampleInferStrandness {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $sampleFeatureCounts {
    cpus = '8'
    memory = '10.GB'
  }
  $samplePrimaryAlignments {
    cpus = '8'
    memory = '10.GB'
  }
  $sampleJunctions {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $sampleCoverage {
    cpus = '5'
    memory = '10.GB'
  }
  $sampleWigToBigWig {
    cpus = 1
    memory = '2.GB'
  }
  $sampleMeanCoverage {
    cpus = '5'
    memory = '10.GB'
  }
  $sampleTXQuant {
    cpus = '8'
    memory = '10.GB'
  }
  $sampleCreateCountObjects {
    cpus = '5'
    memory = '10.GB'
  }
  $sampleCreateCoverageObjects {
    cpus = '5'
    memory = '10.GB'
  }
  $sampleVariantCalls {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $sampleVariantCallsMerge {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $sampleExpressedRegions {
    cpus = '8'
    memory = '10.GB'
  }

}
