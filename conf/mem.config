/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 *  Nextflow base config file
 * -------------------------------------------------
 * A 'blank slate' config file, appropriate for general
 * use on most high performace compute environments.
// * Assumes that all software is installed and available
 * on the PATH. Runs in `local` mode - all jobs will be
 * run on the logged in environment.
 *
 */

process {

  cpus = '1'
//  memory = '4.GB'
  time = '2.h'
  errorStrategy = { task.exitStatus == 140 ? 'retry' : 'terminate' }

  maxRetries = '3'
  maxErrors = '-1'

  $pullGENCODEassemblyfa {
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  $buildHISATindex {
    cpus = '8'
    memory = '14.GB'
  }
  $pullGENCODEgtf {
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  $buildPrepBED {
    cpus = { 8 * task.attempt }
    memory = '14.GB'
  }
  $pullGENCODEtranscripts {
    cpus = '1'
    memory = '4.GB'
  }
  $buildSALMONindex  {
    cpus = { 8 * task.attempt }
    memory = '14.GB'
  }
  $Merging {
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  $ERCC {
    cpus = '8'
    memory = '14.GB'
  }
  $IndividualManifest {
    cpus = { 1 * task.attempt }
    memory = '1.GB'
  }
  $Manifest {
    cpus = { 1 * task.attempt }
    memory = '1.GB'
  }
  $QualityUntrimmed { 
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  $AdaptiveTrimSingleReads {
    cpus = { 1 * task.attempt }
    memory = '1.GB'
  }
  $AdaptiveTrimPairedReads {
    cpus = { 1 * task.attempt }
    memory = '1.GB'
  }
  $Trimming {
    cpus = '8'
    memory = '14.GB'
  }
  $QualityTrimmed {
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  $SingleEndHISAT {
    cpus = '8'
    memory = '14.GB'
  }
  $PairedEndNoTrimHISAT {
    cpus = '8'
    memory = '14.GB'
  }
  $PairedEndTrimmedHISAT {
    cpus = '8'
    memory = '14.GB'
  }
  $SamtoBam {
    cpus = '8'
    memory = '14.GB'
  }
  $InferExperiment {
    cpus = { 1 * task.attempt }
    memory = '1.GB'
  }
  $InferStrandness {
    cpus = { 1 * task.attempt }
    memory = '1.GB'
  }
  $FeatureCounts {
    cpus = '8'
    memory = '2.GB'
  }
  $PrimaryAlignments {
    cpus = '8'
    memory = '2.GB'
  }
  $Junctions {
    cpus = { 1 * task.attempt }
    memory = '2.GB'
  }
  $Coverage {
    cpus = '5'
    memory = '10.GB'
  }
  $WigToBigWig {
    cpus = 1
    memory = '4.GB'
  }
  $MeanCoverage {
    cpus = '5'
    memory = '10.GB'
  }
  $TXQuant {
    cpus = '8'
    memory = '14.GB'
  }
  $CountObjects {
    cpus = '5'
    memory = '10.GB'
  }
  $CoverageObjects {
    cpus = '5'
    memory = '10.GB'
  }
  $VariantCalls {
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  $VariantsMerge {
    cpus = { 1 * task.attempt }
    memory = '4.GB'
  }
  $ExpressedRegions {
    cpus = '8'
    memory = '14.GB'
  }

}
